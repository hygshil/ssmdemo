<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hp.dao.T_businessDao">
	<!-- 添加 -->
	<insert id="insert">
		insert into
		t_business(bNum,bType,bMark)
		values(#{bNum},#{bType},#{bMark})
	</insert>
	<select id="selectAll" resultType="T_business">
		select * from t_business
	</select>
	<delete id="deleteid">
		delete from t_business where bId=#{bId}
	</delete>
</mapper>